scriptDir=$( cd "$( dirname "$0" )" && pwd )

cd "$scriptDir"
cd ..
source "antigen/antigen.zsh"

# Load the oh-my-zsh's library.
antigen use oh-my-zsh

# Bundles from the default repo (robbyrussell's oh-my-zsh).
antigen bundle git
antigen bundle cabal

# Load the theme.
antigen theme https://gist.github.com/zoomix/3827269 agnoster-light.zsh-theme

# Tell antigen that you're done.
antigen apply

# Auto-correction mode on. 
ENABLE_CORRECTION="true"

# Path (auto-generated by nixOS, then copied by me.
export PATH="/home/carlo/bin:/var/setuid-wrappers:/home/carlo/.nix-profile/bin:/home/carlo/.nix-profile/sbin:/home/carlo/.nix-profile/lib/kde4/libexec:/nix/var/nix/profiles/default/bin:/nix/var/nix/profiles/default/sbin:/nix/var/nix/profiles/default/lib/kde4/libexec:/run/current-system/sw/bin:/run/current-system/sw/sbin:/run/current-system/sw/lib/kde4/libexec"

# Personal aliases.
alias -g NS="nix-env -qaP '*'"
alias -g G="| grep -i"
alias -g L="| less"
alias -s pdf=zathura